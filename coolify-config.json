{
  "name": "leafyhealth-platform",
  "type": "application",
  "framework": "nodejs",
  "build": {
    "command": "npm ci --production",
    "outputDirectory": "."
  },
  "start": {
    "command": "node complete-platform-starter.js"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "8080",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "ports": [
    {
      "port": 8080,
      "protocol": "http",
      "public": true
    }
  ],
  "healthcheck": {
    "path": "/health",
    "port": 8080
  }
}