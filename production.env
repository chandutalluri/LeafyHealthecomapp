# Production Environment Variables for Coolify Deployment
NODE_ENV=production
PORT=8080

# Database Configuration (Update with your PostgreSQL details)
DATABASE_URL=postgresql://username:password@host:5432/leafyhealth_production

# Application Settings
NEXT_TELEMETRY_DISABLED=1
NPM_CONFIG_PRODUCTION=false

# Security
JWT_SECRET=your-jwt-secret-key-here
API_SECRET=your-api-secret-key-here

# Performance
NODE_OPTIONS=--max_old_space_size=1024
UV_THREADPOOL_SIZE=4